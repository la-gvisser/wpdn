{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "make clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "make debug",
            "type": "shell",
            "command": "make",
            "args": [
                "debug"
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "make zips",
            "type": "shell",
            "command": "make",
            "args": [
                "zips"
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "make install",
            "type": "shell",
            "command": "sudo",
            "args": [
                "make",
                "install"
            ],
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}